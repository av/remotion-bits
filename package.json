{
  "name": "remotion-bits",
  "version": "0.1.0",
  "description": "Remotion component bits with a shadcn-like installer",
  "type": "module",
  "bin": {
    "remotionbits": "src/cli.js"
  },
  "files": [
    "src",
    "templates"
  ],
  "keywords": [
    "remotion",
    "react",
    "video",
    "components",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "remotion": ">=4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "jsdom": "^24.0.0",
    "jsrepo": "^3.0.0",
    "oxfmt": "^0.9.0",
    "oxlint": "^0.15.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.9"
  },
  "scripts": {
    "registry:build": "jsrepo build",
    "prepack": "jsrepo build",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}
