{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@showcases/*": ["./src/components/showcases/*"],
      "@bits": ["./src/bits"],
      "remotion-bits": ["../src/index.ts"],
      "remotion-bits/*": ["../src/*"]
    }
  }
}