---
import "../styles/custom.css";
import { HeroShowcase } from '@/components/showcases/HeroShowcase';
---

<!doctype html>
<html class="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Remotion Bits - Building Blocks for Video</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
      rel="stylesheet"
    />
    <meta
      name="description"
      content="Open Source component kit for Remotion. Save time building programmatic videos."
    />
  </head>
  <body
    class="bg-background-dark text-slate-200 font-sans antialiased selection:bg-primary selection:text-white overflow-x-hidden"
  >
    <div class="relative w-full min-h-screen">
      <div
        class="fixed top-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] bg-primary/10 blur-[120px] rounded-full pointer-events-none z-0"
      >
      </div>
      <div
        class="fixed bottom-0 right-0 w-[600px] h-[600px] bg-blue-900/10 blur-[120px] rounded-full pointer-events-none z-0"
      >
      </div>
      <div
        class="fixed inset-0 bg-[size:40px_40px] bg-grid-pattern opacity-[0.15] pointer-events-none z-0"
      >
      </div>
      <nav
        class="fixed top-0 w-full z-50 border-b border-white/5 bg-background-dark/80 backdrop-blur-md"
      >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16 items-center">
            <div class="flex items-center gap-3">
              <span class="font-bold text-xl tracking-tight text-white"
                >Remotion Bits</span
              >
            </div>
            <div
              class="hidden md:flex space-x-8 text-sm font-medium text-gray-400"
            >
              <a
                class="hover:text-primary transition-colors"
                href="/docs/getting-started">Documentation</a
              >
              <a
                class="hover:text-primary transition-colors"
                href="/docs/examples/text-animations">Examples</a
              >
            </div>
            <div class="flex items-center gap-4">
              <a
                class="group flex items-center gap-2 bg-white/5 hover:bg-white/10 text-white px-3 py-1.5 rounded-md text-xs font-medium border border-white/10 transition-all"
                href="https://github.com/av/remotion-bits"
                target="_blank"
              >
                <svg
                  class="w-4 h-4 text-yellow-500"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"
                  ></path></svg
                >
                <span>Star on GitHub</span>
              </a>
            </div>
          </div>
        </div>
      </nav>
      <section class="relative pt-32 pb-20 lg:pt-40 lg:pb-24 z-10">
        <div
          class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center text-center"
        >
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-orange-500/10 border border-orange-500/20 text-xs font-mono text-primary mb-8 animate-fade-in-up"
          >
            <span class="material-symbols-outlined text-sm">terminal</span>
            npm install remotion-bits
          </div>
          <h1
            class="text-6xl md:text-8xl lg:text-9xl font-bold tracking-tight text-white mb-8 leading-[1.1] md:leading-[1.1]"
          >
            Building blocks <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-400 to-gray-600"
              >for your videos</span
            >
          </h1>
          <p
            class="mt-2 max-w-2xl mx-auto text-lg md:text-xl text-gray-400 mb-10 leading-relaxed"
          >
            Open Source component kit for Remotion. <br
              class="hidden md:block"
            />Save time building programmatic videos.
          </p>
          <div
            class="flex flex-col sm:flex-row justify-center items-center gap-4 mb-20 w-full sm:w-auto"
          >
            <a
              class="group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-lg bg-white px-8 font-medium text-black transition-all duration-300 hover:bg-gray-200 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black w-full sm:w-auto"
              href="https://github.com/av/remotion-bits"
              target="_blank"
            >
              <span class="material-symbols-outlined mr-2 text-xl">star</span>
              <span class="mr-1">Star on GitHub</span>
            </a>
            <a
              class="group inline-flex h-12 items-center justify-center rounded-lg border border-white/20 bg-white/5 px-8 font-medium text-white transition-all duration-300 hover:bg-white/10 hover:border-white/30 w-full sm:w-auto"
              href="/docs/getting-started"
            >
              <span class="mr-2">Get Started</span>
              <span
                class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-transform"
                >arrow_forward</span
              >
            </a>
          </div>
          <HeroShowcase client:only="react" />
        </div>
      </section>
      <section class="py-24 relative">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="mb-16">
            <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
              Designed for engineers.
            </h2>
            <p class="text-gray-400 text-lg max-w-2xl">
              Skip the After Effects license. Build complex motion graphics with
              the tools you already know and love.
            </p>
          </div>
          <div
            class="grid grid-cols-1 md:grid-cols-6 lg:grid-cols-6 gap-4 md:gap-6 auto-rows-[250px] md:auto-rows-[280px]"
          >
            <div
              class="md:col-span-4 rounded-xl border border-white/10 bg-surface-light p-8 relative overflow-hidden group hover:border-primary/30 transition-colors duration-500"
            >
              <div
                class="absolute inset-0 bg-gradient-to-br from-transparent to-primary/5 opacity-0 group-hover:opacity-100 transition-opacity"
              >
              </div>
              <div class="relative z-10 h-full flex flex-col justify-between">
                <div>
                  <div
                    class="w-12 h-12 rounded-lg bg-orange-500/10 flex items-center justify-center text-primary mb-4 border border-primary/20"
                  >
                    <span class="material-symbols-outlined text-2xl"
                      >text_fields</span
                    >
                  </div>
                  <h3 class="text-2xl font-semibold text-white mb-2">
                    Text Effects
                  </h3>
                  <p class="text-gray-400 text-sm max-w-md">
                    Create complex typography animations with ease. Stagger characters, words, or lines. Combine blur, scale, and position offsets for professional reveals.
                  </p>
                </div>
              </div>
            </div>
            <div
              class="md:col-span-2 rounded-xl border border-white/10 bg-surface-light p-8 relative overflow-hidden group hover:border-primary/30 transition-colors duration-500"
            >
              <div class="relative z-10 h-full flex flex-col">
                <div
                  class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 mb-4 border border-purple-500/20"
                >
                  <span class="material-symbols-outlined text-2xl"
                    >grain</span
                  >
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Particle System
                </h3>
                <p class="text-gray-400 text-sm mb-4">
                  A complete physics-based particle engine. Simulate rain, confetti, or starfields with customizable behaviors.
                </p>
              </div>
            </div>
            <div
              class="md:col-span-2 rounded-xl border border-white/10 bg-surface-light p-8 relative overflow-hidden group hover:border-primary/30 transition-colors duration-500"
            >
              <div
                class="absolute -right-4 -bottom-4 text-9xl text-white/5 rotate-12 select-none group-hover:text-primary/10 transition-colors"
              >
                <span class="material-symbols-outlined">animation</span>
              </div>
              <div class="relative z-10">
                <div
                  class="w-12 h-12 rounded-lg bg-green-500/10 flex items-center justify-center text-green-400 mb-4 border border-green-500/20"
                >
                  <span class="material-symbols-outlined text-2xl">animation</span>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Motion Primitives
                </h3>
                <p class="text-gray-400 text-sm">
                  Declarative entry and exit animations. Chain fades, slides, and scaling without managing complex interpolations manually.
                </p>
              </div>
            </div>
            <div
              class="md:col-span-2 rounded-xl border border-white/10 bg-surface-light p-8 relative overflow-hidden group hover:border-primary/30 transition-colors duration-500"
            >
              <div class="relative z-10 h-full">
                <div
                  class="w-12 h-12 rounded-lg bg-blue-600/10 flex items-center justify-center text-blue-500 mb-4 border border-blue-600/20"
                >
                  <span class="material-symbols-outlined text-2xl"
                    >integration_instructions</span
                  >
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Type Safe
                </h3>
                <p class="text-gray-400 text-sm mb-4">
                  First-class TypeScript support. Autocomplete for every prop
                  and component.
                </p>
              </div>
            </div>
            <div
              class="md:col-span-2 rounded-xl border border-white/10 bg-surface-light p-8 relative overflow-hidden group hover:border-primary/30 transition-colors duration-500 flex flex-col"
            >
              <div class="relative z-10 flex-1">
                <div
                  class="w-12 h-12 rounded-lg bg-teal-500/10 flex items-center justify-center text-teal-400 mb-4 border border-teal-500/20"
                >
                  <span class="material-symbols-outlined text-2xl">content_copy</span>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">
                  Copy-Paste Ready
                </h3>
                <p class="text-gray-400 text-sm">
                  Install components directly into your codebase. Own the source, customize endlessly, and suffer zero bloat.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section
        class="py-24 bg-gradient-to-b from-background-dark to-black border-t border-white/5"
      >
        <div class="max-w-4xl mx-auto px-4 text-center">
          <h2 class="text-3xl md:text-5xl font-bold text-white mb-8">
            Start creating in seconds.
          </h2>
          <div
            class="bg-surface-dark border border-white/10 rounded-xl p-4 md:p-8 max-w-2xl mx-auto shadow-2xl relative overflow-hidden group"
          >
            <div
              class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
            >
            </div>
            <div
              class="flex items-center justify-between gap-4 font-mono text-sm md:text-lg"
            >
              <div class="flex items-center gap-3">
                <span class="text-primary font-bold">➜</span>
                <span class="text-gray-300">npm install</span>
                <span class="text-white font-bold">remotion-bits</span>
              </div>
              <button
                id="copy-npm-install"
                aria-label="Copy"
                class="text-gray-500 hover:text-white transition-colors"
              >
                <span class="material-symbols-outlined">content_copy</span>
              </button>
            </div>
          </div>
          <p class="text-gray-500 mt-8 text-sm">
            Requires React 18+ and Remotion 4.0+. <br />
            <a class="text-primary hover:underline" href="/docs/getting-started"
              >Read the setup guide</a
            >
          </p>
        </div>
      </section>
      <footer class="bg-black border-t border-white/5 pt-16 pb-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div
            class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12"
          >
            <div class="col-span-2 lg:col-span-2">
              <div class="flex items-center gap-2 mb-4">
                <div
                  class="w-6 h-6 rounded bg-primary flex items-center justify-center text-white font-bold text-xs"
                >
                  R
                </div>
                <span class="font-semibold text-white">Remotion Bits</span>
              </div>
              <p class="text-gray-500 text-sm mb-6 max-w-xs">
                High-performance, composable animation components for Remotion.
                Built by developers, for developers.
              </p>
              <div class="flex gap-4">
                <a
                  class="text-gray-500 hover:text-white transition-colors"
                  href="#"
                  ><span class="sr-only">Twitter</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                    ></path></svg
                  >
                </a>
                <a
                  class="text-gray-500 hover:text-white transition-colors"
                  href="https://github.com/av/remotion-bits"
                  target="_blank"
                  ><span class="sr-only">GitHub</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      clip-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      fill-rule="evenodd"></path></svg
                  >
                </a>
              </div>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-4 text-sm">Library</h3>
              <ul class="space-y-2 text-sm text-gray-500">
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Components</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Hooks</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Utils</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Presets</a
                  >
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-4 text-sm">Community</h3>
              <ul class="space-y-2 text-sm text-gray-500">
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >GitHub Discussions</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Discord</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Showcase</a
                  >
                </li>
                <li>
                  <a class="hover:text-primary transition-colors" href="#"
                    >Contributing</a
                  >
                </li>
              </ul>
            </div>
          </div>
          <div
            class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4"
          >
            <p class="text-gray-600 text-xs">
              © 2024 Remotion Bits. Open source software.
            </p>
            <div class="flex items-center gap-2">
              <span
                class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]"
              ></span>
              <span class="text-gray-500 text-xs">v2.1.0 Stable</span>
            </div>
          </div>
        </div>
      </footer>
    </div>
    <script>
      const copyButton = document.getElementById("copy-npm-install");
      if (copyButton) {
        copyButton.addEventListener("click", async () => {
          try {
            await navigator.clipboard.writeText("npm install remotion-bits");

            const icon = copyButton.querySelector(".material-symbols-outlined");
            if (icon) {
              const originalText = icon.innerText;
              icon.innerText = "check";
              icon.classList.add("text-green-500"); // Add green color for feedback

              setTimeout(() => {
                icon.innerText = originalText;
                icon.classList.remove("text-green-500");
              }, 2000);
            }
          } catch (err) {
            console.error("Failed to copy:", err);
          }
        });
      }
    </script>
  </body>
</html>
