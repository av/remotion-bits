---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  variant?: 'default' | 'accent';
}

const { class: className, size = 'md', variant = 'default' } = Astro.props;

const sizeMap = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-12 h-12',
};

const variantMap = {
  default: 'stroke-current',
  accent: 'stroke-primary',
};
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`${sizeMap[size]} ${variantMap[variant]} ${className || ''}`}
>
